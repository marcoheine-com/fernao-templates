---
import LandingLayout from '../layouts/Landing-Layout.astro'
import Text from '../components/Text.astro'
import PageBreadcrumb from '../components/PageBreadcrumb.astro'
import Headline from '../components/Headline.astro'
import TextMedia from '../components/TextMedia.astro'
import FeatureList from '../components/FeatureList.astro'
import StepByStep from '../components/StepByStep.astro'
import Form from '../components/Form.astro'
import Banner from '../components/Banner.astro'
import NewsTeaser from '../components/NewsTeaser.astro'
import TextTeaser from '../components/TextTeaser.astro'
import Media from '../components/Media.astro'
---

<LandingLayout title='Fernao Landing Page'>
  <Banner />
  <Headline
    id='headline-content-element'
    headlineVariant='h3'
    headlinecontent='Headline Content Element, mit einer Subheadline für weiteren Content in einem umfangreichen Textblock.'
    sublinecontent='Weit hinten, hinter den Wort-bergen, fern der Länder Vokalien und Konsonantien leben die Blindtexte.'
    sublineVariant='h4'
  />
  <Text
    headlineId='text-content-element-linksbündig'
    headlineContent='Text Content Element linksbündig Headline und Subheadline für weiteren Content in einem umfangreichen Textblock.'
  />
  <Text
    headlineId='text-content-element-zentriert'
    headlineContent='Text Content Element zentriert mit Headline und  Subheadline für weiteren Content in einem umfangreichen Textblock.'
    variant='centered'
  />
  <Text
    headlineId='Text Content Element zwei-spaltig'
    headlineContent='Text Content Element two-col mit Headline und  Subheadline für weiteren Content in einem umfangreichen Textblock.'
    variant='two-col'
  />
  <Text
    headlineId='Text Content Element mit Hintergrund Grau'
    headlineContent='Text Content Element mit Hintergrund Grau Headline und Subheadline für weiteren Content in einem umfangreichen Textblock.'
    backgroundColor='gray'
  />
  <Text
    headlineId='Text Content Element mit Hintergrund Grün'
    headlineContent='Text Content Element mit Hintergrund Grün Headline und Subheadline für weiteren Content in einem umfangreichen Textblock.'
    backgroundColor='green'
  />
  <Text
    headlineId='Text Content Element mit Hintergrund Schwarz'
    headlineContent='Text Content Element mit Hintergrund Schwarz Headline und Subheadline für weiteren Content in einem umfangreichen Textblock.'
    backgroundColor='black'
  />
  <TextMedia
    headlineId='Text Media Content Element image right'
    media={{
      src: 'https://source.unsplash.com/random/800x600',
      alt: 'Placeholder',
      type: 'image',
    }}
    mediaPosition='right'
  />
  <TextMedia
    headlineId='Text Media Content Element image left'
    media={{
      src: 'https://source.unsplash.com/random/800x600',
      alt: 'Placeholder',
      type: 'image',
    }}
    mediaPosition='left'
    aspectRatio='1:1'
  />
  <TextMedia
    headlineId='Text Media Content Element image left green'
    media={{
      src: 'https://source.unsplash.com/random/800x600',
      alt: 'Placeholder',
      type: 'image',
    }}
    mediaPosition='left'
    aspectRatio='4:3'
    backgroundColor='green'
  />
  <TextMedia
    headlineId='text-media-content-element-image-right-gray'
    media={{
      src: 'https://source.unsplash.com/random/800x600',
      alt: 'Placeholder',
      type: 'image',
    }}
    mediaPosition='right'
    aspectRatio='4:3'
    backgroundColor='gray'
  />

  <TextMedia
    headlineId='text-media-content-element-image-left-black'
    media={{
      src: 'https://source.unsplash.com/random/800x600',
      alt: 'Placeholder',
      type: 'image',
    }}
    mediaPosition='left'
    backgroundColor='black'
  />

  <TextMedia
    headlineId='text-media-content-element-video'
    media={{
      poster: 'https://source.unsplash.com/random/800x600',
      src: 'https://www.w3schools.com/html/mov_bbb.mp4',
      alt: 'Placeholder',
      type: 'video',
    }}
    mediaPosition='left'
    backgroundColor='black'
  />

  <FeatureList items={8} />
  <StepByStep />
  <StepByStep variant='vertical' />
  <Form />
  <NewsTeaser />
  <TextTeaser />
  <Media type='single' />
  <Media type='single' mediaType='video' />
  <Media type='slider' />
  <Media type='slider-gallery' />
  <PageBreadcrumb />
</LandingLayout>
