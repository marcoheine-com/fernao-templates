---
import Layout from '../layouts/Layout.astro'
import Text from '../components/Text.astro'
import PageBreadcrumb from '../components/PageBreadcrumb.astro'
import Headline from '../components/Headline.astro'
import TextMedia from '../components/TextMedia.astro'
import FeatureList from '../components/FeatureList.astro'
import StepByStep from '../components/StepByStep.astro'
---

<Layout title='Welcome to Astro.'>
  <Headline
    headlineVariant='h3'
    headlinecontent='Linksbündige Überschrift mit einer Subheadline für weiteren Content in einem umfangreichen Textblock.'
    sublinecontent='Weit hinten, hinter den Wort-bergen, fern der Länder Vokalien und Konsonantien leben die Blindtexte.'
    sublineVariant='h4'
  />
  <Text variant='centered' />
  <TextMedia
    media={{
      src: 'https://picsum.photos/seed/picsum/800/600',
      alt: 'Placeholder',
      type: 'image',
    }}
    mediaPosition='right'
  />
  <FeatureList items={8} />
  <StepByStep />
  <StepByStep variant='vertical' />
  <PageBreadcrumb />
</Layout>
