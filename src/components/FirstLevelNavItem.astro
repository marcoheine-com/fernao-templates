---
import ArrowBottomIcon from './ArrowBottomIcon.astro'

interface Props {
  ariaControls: string
  id: string
  title: string
  bold?: boolean
}
const { ariaControls, id, title, bold = true } = Astro.props
---

<li
  class={`mb-4 last:mb-0 px-4 py-2 ${
    bold ? 'font-bold' : 'font-normal'
  } 1440:py-0 1440:mb-0`}
>
  <button class='flex w-full gap-1' aria-controls={ariaControls} id={id}>
    <span class='text-underline text-underline-colored w-full text-start'>
      {title}
    </span>
    <ArrowBottomIcon className='rotate-[-90deg] 1440:rotate-0' />
  </button>
  <slot />
</li>
